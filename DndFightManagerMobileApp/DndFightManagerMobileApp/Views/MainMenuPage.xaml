<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DndFightManagerMobileApp.Views.MainMenuPage"
             Background="{DynamicResource MainDark}">
    <ContentPage.Content>
        <StackLayout
            VerticalOptions="Center"
            HorizontalOptions="CenterAndExpand"
            Padding="10"
            Margin="0,0,0,100"
            WidthRequest="200"
        >
            <Button Text="Бестиарий"
                    Style="{DynamicResource Key=DefaultButton}"
                    Command="{Binding NavigateToBestiaryCommand}"
                    Margin="0,3"/>
            
            <Button Text="Сцены"
                    Style="{DynamicResource Key=DefaultButton}"
                    Command="{Binding NavigateToScenesCommand}"
                    Margin="0,3"/>
            
            <Button Text="Модерация"
                    Style="{DynamicResource Key=DefaultButton}"
                    Margin="0,3"/>
            <!--<Button
                Text="Последний моб"
                Style="{DynamicResource Key=LinkButton}"
            />
            <Button
                Text="Последняя сцена"
                Style="{DynamicResource Key=LinkButton}"
            />-->
        </StackLayout>
    </ContentPage.Content>
</ContentPage>