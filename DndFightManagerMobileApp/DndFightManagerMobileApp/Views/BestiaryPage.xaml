<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DndFightManagerMobileApp.Views.BestiaryPage"
             Background="{DynamicResource MainMedium}">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="10*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0"
                  BackgroundColor="{DynamicResource MainDark}">
                <Button Style="{DynamicResource AddButton}"
                        Command="{Binding NavigateToCreateEditBeastNoteStatsCommand}"
                        HorizontalOptions="End"
                        VerticalOptions="Center"
                        Margin="10"                        
                        x:Name="ButtonAdd"
                        WidthRequest="{Binding Height, Source={x:Reference ButtonAdd}}"/>
            </Grid>
            
            
        </Grid>
    </ContentPage.Content>
</ContentPage>